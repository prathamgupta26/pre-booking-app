<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">

    <h3 class="title offset-2"><%= listing.title %></h3>
    <div class="card col-6 offset-2">
        <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="listing_image">
        <div class="card-body">
        <p class="card-text">
        <b><%= listing.title %></p></b> <br>
        <%= listing.description %> <br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.location %>
        <%= listing.country %>
    </div>
    </div>

    <br>
    
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-2 offset-2 edit-btn">Edit</a>
    <br>        
    <br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark col-2 offset-2">Delete</button>
    </form>
    
    </div>
</div>
